<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phonehelper_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneHelperActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/phonehelper_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#E0E69D" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/phonehelper_viewPager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/phonehelper_tabLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>